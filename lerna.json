{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "version": "1.1.3",
  "packages": [
    "packages/*",
    "apps/*"
  ],
  "npmClient": "pnpm",
  "ignoreChanges": [
    "**/node_modules/**",
    "**/package.json",
    "**/*.md",
    ".github/**",
    "lerna.json",
    "pnpm-lock.yaml"
  ],
  "command": {
    "version": {
      "conventionalCommits": true,
      "message": "chore(release): version %s"
    }
  }
}
