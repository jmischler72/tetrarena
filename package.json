{
	"name": "@jmischler72/tetrarena",
	"version": "1.8.0",
	"description": "A monorepo for tetrarena project",
	"scripts": {
		"lint": "eslint ./ --max-warnings=0 --ext .ts,.svelte",
		"lint-fix": "eslint ./ --max-warnings=0 --ext .ts,.svelte --fix",
		"format": "prettier --config .prettierrc \".\" --write",
		"client": "pnpm --filter @jmischler72/client",
		"server": "pnpm --filter @jmischler72/server",
		"prepare": "husky install",
		"release": "standard-version",
		"cz": "cz"
	},
	"engines": {
		"node": ">=16.19.0"
	},
	"packageManager": "pnpm@9.1.2",
	"dependencies": {
		"husky": "^9.0.11"
	},
	"devDependencies": {
		"@commitlint/cli": "^19.3.0",
		"@commitlint/config-conventional": "^19.2.2",
		"@lerna-lite/cli": "^3.3.3",
		"@lerna-lite/version": "^3.3.3",
		"@types/eslint": "8.56.10",
		"@types/node": "^20.12.10",
		"@typescript-eslint/eslint-plugin": "^7.8.0",
		"@typescript-eslint/parser": "^7.8.0",
		"commitizen": "^4.3.0",
		"cz-conventional-changelog": "^3.3.0",
		"esbuild": "^0.21.1",
		"eslint": "^8.57.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-prettier": "^5.1.3",
		"eslint-plugin-svelte": "^2.38.0",
		"lint-staged": "^15.2.2",
		"prettier": "^3.2.5",
		"prettier-plugin-svelte": "^3.2.3",
		"prettier-plugin-tailwindcss": "^0.5.14",
		"standard-version": "^9.5.0",
		"ts-node": "^10.9.2",
		"turbo": "^1.13.3",
		"typescript": "5.4.5"
	}
